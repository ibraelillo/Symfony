{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Reservacion</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ entity.telefono }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Fecha_entrada</th>
                <td>{{ entity.fechaentrada|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Fecha_publicacion</th>
                <td>{{ entity.fechapublicacion|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Fecha_salida</th>
                <td>{{ entity.fechasalida|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Capacidad</th>
                <td>{{ entity.capacidad }}</td>
            </tr>
            <tr>
                <th>Confirmada</th>
                <td>{{ entity.confirmada }}</td>
            </tr>
            <tr>
                <th>Atendida</th>
                <td>{{ entity.atendida }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('location_{id}_reservaciones') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('location_{id}_reservaciones_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('location_{id}_reservaciones_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
